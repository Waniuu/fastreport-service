<?xml version="1.0" encoding="utf-8"?>
<Report ScriptLanguage="CSharp" TextQuality="Regular">

  <!-- ================================
       W Z Ó R   R A P O R T U
       (bez żadnych źródeł danych)
     ================================ -->

  <ReportPage Name="Page1" PaperWidth="210" PaperHeight="297">
    
    <!-- Nagłówek systemu -->
    <TextObject Name="SystemHeader" 
                Left="0" Top="10" Width="720" Height="25"
                Font="Arial, 12pt, Bold"
                HorzAlign="Center"
                TextFill.Color="DarkBlue"
                Text="System Generowania Testów"/>

    <!-- Tytuł główny -->
    <TextObject Name="Title" 
                Left="0" Top="45" Width="720" Height="30"
                Font="Arial, 16pt, Bold"
                HorzAlign="Center"
                TextFill.Color="Black"
                Text="Tytuł raportu"/>

    <!-- Informacja o dacie generowania -->
    <TextObject Name="Panel1Header"
                Left="20" Top="85" Width="680" Height="20"
                Text="Raport wygenerowany: [Date]"
                Font="Arial, 10pt, Regular"
                TextFill.Color="Black"/>

    <!-- Podtytuł -->
    <TextObject Name="Panel1Body"
                Left="20" Top="110" Width="680" Height="25"
                Text="Podtytuł raportu"
                Font="Arial, 12pt, Bold"
                TextFill.Color="Black"/>

    <!-- Nagłówki kolumn (opcjonalnie, będą dynamicznie generowane) -->
    <TextObject Name="Panel2Header"
                Left="20" Top="145" Width="680" Height="20"
                Font="Arial, 9pt, Bold"
                TextFill.Color="Black"
                Text="Nagłówki kolumn pojawią się tutaj"
                Visible="False"/>

    <!-- Dane tabeli -->
    <DataBand Name="ListBand" Top="170" Height="25">
      <!-- Tabela będzie generowana dynamicznie w kodzie -->
    </DataBand>

    <!-- Stopka z numeracją stron -->
    <TextObject Name="PageFooter"
                Left="0" Top="570" Width="720" Height="20"
                Font="Arial, 8pt, Regular"
                HorzAlign="Right"
                TextFill.Color="Black"
                Text="Strona [Page#] z [TotalPages#]"/>

  </ReportPage>
</Report>
