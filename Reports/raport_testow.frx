<?xml version="1.0" encoding="utf-8"?>
<Report ScriptLanguage="CSharp" TextQuality="Regular">
  <ReportPage Name="Page1" PaperWidth="210" PaperHeight="297" TopMargin="20" BottomMargin="20" LeftMargin="20" RightMargin="20">
    
    <!-- Nagłówek systemu -->
    <TextObject Name="SystemHeader" 
                Left="0" Top="10" Width="720" Height="25"
                Font="Arial, 12pt, Bold"
                HorzAlign="Center"
                TextFill.Color="DarkBlue"
                Text="System Generowania Testów"
                Visible="False"/>

    <!-- Tytuł główny -->
    <TextObject Name="Title" 
                Left="0" Top="45" Width="680" Height="30"
                Font="Arial, 16pt, Bold"
                HorzAlign="Center"
                TextFill.Color="Black"
                Text="Tytuł raportu"/>

    <!-- Informacja o dacie generowania -->
    <TextObject Name="Panel1Header"
                Left="0" Top="85" Width="680" Height="20"
                Text="Raport wygenerowany: [Date]"
                Font="Arial, 10pt, Regular"
                TextFill.Color="Black"
                HorzAlign="Center"/>

    <!-- Podtytuł -->
    <TextObject Name="Panel1Body"
                Left="0" Top="110" Width="680" Height="25"
                Text="Podtytuł raportu"
                Font="Arial, 12pt, Bold"
                HorzAlign="Center"
                TextFill.Color="Black"/>

    <!-- Wykres: Rozkład pytań według kategorii -->
    <ChartObject Name="ChartCategory" Left="20" Top="150" Width="320" Height="200" Border.Lines="All" Border.Color="Silver">
      <Series>
        <Series ChartType="Pie" Name="SeriesCategory" ArgumentDataColumn="Kategoria" ValueDataColumn="Ilosc" ColorEach="true"/>
      </Series>
      <Title Text="Rozkład pytań według kategorii" Font="Arial, 10pt, Bold" Alignment="TopCenter"/>
      <Legend Alignment="TopRight" Visible="true"/>
    </ChartObject>

    <!-- Wykres: Rozkład pytań według poziomu trudności -->
    <ChartObject Name="ChartLevel" Left="360" Top="150" Width="300" Height="200" Border.Lines="All" Border.Color="Silver">
      <Series>
        <Series ChartType="Bar" Name="SeriesLevel" ArgumentDataColumn="Poziom" ValueDataColumn="Ilosc" ColorEach="true"/>
      </Series>
      <Title Text="Rozkład pytań według poziomu" Font="Arial, 10pt, Bold" Alignment="TopCenter"/>
      <AxisX Title="Poziom trudności"/>
      <AxisY Title="Liczba pytań"/>
    </ChartObject>

    <!-- Tabela danych -->
    <DataBand Name="ListBand" Top="370" Height="25">
      <TextObject Name="ListItem"
                  Left="0" Top="0" Width="650" Height="20"
                  Text="• [Tresc_Pytania]"
                  Font="Arial, 9pt"
                  TextFill.Color="Black"/>
    </DataBand>

  </ReportPage>
</Report>
